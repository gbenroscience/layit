<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayout
    layout_width="match_parent"
    layout_height="match_parent">

    <imports
            files="aa/aaa.js;kkk/mmm.js;"
    />
    <View
        id="section_top"
        layout_width="match_parent"
        layout_height="128px"
        backgroundColor="#000044"
        layout_constraintTop_toTopOf='parent'
        layout_constraintStart_toStartOf='parent'
        layout_constraintEnd_toEndOf='parent'

    />
    <Label
        id="site_title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintStart_toStartOf='section_top'
        layout_constraintCenterYAlign="section_top"
        layout_marginStart="16"
        textColor="#eee"
        value="Web-Constraints CPanel"
        textSize="1.5em"
        textStyle="bold"
        fontFamily="Kartika"
    
    />
  
     
    <Guideline
        id="guide_menu"
        layout_width="1"
        layout_height="1"
        orientation="vertical"
        layout_constraintGuide_percent="0.5"
    />
    <Label
        id="home"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintEnd_toStartOf='people'
        layout_constraintBottom_toBottomOf="section_top"
        layout_marginStart="6"
        layout_marginBottom="16"
        textColor="white"
        value="Home"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="people"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintEnd_toStartOf='lifestyle'
        layout_constraintBottom_toBottomOf="section_top"
        layout_marginStart="6"
        layout_marginBottom="16"
        textColor="white"
        value="People and Positions"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />    
    <Label
        id="lifestyle"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintCenterXAlign='guide_menu'
        layout_constraintBottom_toBottomOf="section_top"
        layout_marginStart="6"
        layout_marginBottom="16"
        textColor="white"
        value="Lifestyle"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="about_us"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintStart_toEndOf='lifestyle'
        layout_constraintBottom_toBottomOf="section_top"
        layout_marginStart="6"
        layout_marginBottom="16"
        textColor="white"
        value="About Us"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
       
    />

    <Label
        id="help"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_constraintStart_toEndOf='about_us'
        layout_constraintBottom_toBottomOf="section_top"
        layout_marginStart="6"
        layout_marginBottom="16"
        textColor="white"
        value="Help"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />

    <Button
        id="login_btn"
        layout_width="wrap_content"
        layout_height="36px"
        layout_constraintEnd_toEndOf="section_top"
        layout_constraintCenterYAlign="login_input"
        layout_marginEnd="80"
        background="btn_dark_green"
        fontFamily="Avenir"
        layout_padding="8px"
        value="LOGIN NOW"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"

    />
    
      
    <TextField
        id="login_input"
        layout_width="220px"
        layout_height="42px"
        layout_constraintEnd_toStartOf="login_btn"
        layout_constraintCenterYAlign="section_top"
        layout_marginTop="16"
        layout_marginEnd="18"
        placeholder="Login"
        background="btn_dark_green"
        fontFamily="Avenir"
        layout_padding="8px"
        text="apply"
        value="LOGIN"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
        inputType='password'
    />
    
    
    <TextArea
        id="notes_area"
        layout_width="32%"
        layout_height="25%"
        layout_constraintStart_toStartOf="parent"
        layout_constraintEnd_toEndOf="parent"
        layout_constraintTop_toBottomOf="section_top"
        layout_marginTop="80"
        layout_marginEnd="8"
        placeholder="Login"
        background="white"
        fontFamily="Avenir"
        layout_padding="8px"
        text=""
        value="lol!!!!"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        border="1px solid blue"
        resize="none"
    />
    
    <Button
        id="check_btn"
        layout_width="120px"
        layout_height="36px"
        layout_constraintStart_toEndOf="notes_area"
        layout_constraintCenterYAlign="notes_area"
        layout_marginStart="8"
        background="lightgray"
        fontFamily="Avenir"
        layout_padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"
    />
       
    <DropDown
        id="drop_down"
        layout_width="220px"
        layout_height="32px"
        layout_constraintEnd_toStartOf="notes_area"
        layout_constraintCenterYAlign="notes_area"
        layout_marginEnd="8"
        items="['Nigeria','The United States','The United Kingdom','France','South Africa','Republic of Ireland','South Korea','Japan','Brazil','Chile','Argentina','Ecuador']"
        background="#ddd"
        fontFamily="Avenir"
        layout_padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"       
    />

    <Clock
        id="clock_1"
        layout_width="90"
        layout_height="90"
        layout_constraintStart_toEndOf="site_title"
        layout_constraintTop_toTopOf="site_title"
        layout_constraintBottom_toBottomOf="site_title"
        layout_marginTop="0"
        clockOuterColor="transparent"
        clockMiddleColor="black"
        clockInnerColor="white"
        clockTickColor="black"
        clockSecondsColor="brown"
        clockMinutesColor="black"
        clockHoursColor="black"
        clockCenterSpotWidth="22"
        clockOuterCircleAsFractionOfFrameSize="1"
        clockShowBaseText="true"
        
    />

    <ProgressBar
            id="progress"
            layout_width="300"
            layout_height="40"
            layout_constraintCenterYAlign="check_btn"
            layout_constraintStart_toEndOf="check_btn"
            layout_marginStart="32px"
            layout_marginTop="32px"
            progressColor="green"
            backgroundColor="lightblue"
            textColor="darkred"
            value="32"

    />

    <include
            layout="includer"
            id="included_details"
            layout_width="100%"
            layout_height="220"
            layout_marginTop="88"
            layout_constraintCenterXAlign="parent"
            layout_constraintTop_toBottomOf="notes_area"
            border="1px solid black"
            borderRadius="1em"
    />

    <Radio
        id='yes'
        layout_width="20"
        layout_height="20"
        name='question'
        checked='false'
        layout_constraintCenterXAlign="notes_area"
        layout_constraintTop_toBottomOf="included_details"
        layout_marginTop='16'
        
        />
    <Radio
        id='no'
        layout_width="20"
        layout_height="20"
        name='question'
        checked='true'
        layout_constraintTop_toTopOf="yes"
        layout_constraintStart_toEndOf="yes"
        layout_marginStart='16'
        cssClass="funny_radio"
        
        
        />

        
</ConstraintLayout>