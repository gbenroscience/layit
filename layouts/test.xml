<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayout
    width="match_parent"
    height="match_parent">

    <imports
        files="aa/aaa.js;kkk/mmm.js;"
    />
    <View
        id="section_top"
        width="match_parent"
        height="128px"
        backgroundColor="#000044"
        top_top='parent'
        start_start='parent'
        end_end='parent'

    />
    <Label
        id="site_title"
        width="wrap_content"
        height="wrap_content"
        start_start='section_top'
        cy_align="section_top"
        marginStart="16"
        textColor="#eee"
        value="Layit Framework By Example"
        textSize="1.5em"
        textStyle="bold italic"
        fontFamily="Kartika"
    
    />
  
     
    <Guideline
        id="guide_menu"
        width="1"
        height="1"
        orientation="vertical"
        guide_percent="0.5"
    />
    <Label
        id="home"
        width="wrap_content"
        height="wrap_content"
        end_start='people'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Home"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="people"
        width="wrap_content"
        height="wrap_content"
        end_start='lifestyle'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="People and Positions"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />    
    <Label
        id="lifestyle"
        width="wrap_content"
        height="wrap_content"
        cx_align='guide_menu'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Lifestyle"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="about_us"
        width="wrap_content"
        height="wrap_content"
        start_end='lifestyle'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="About Us"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
       
    />

    <Label
        id="help"
        width="wrap_content"
        height="wrap_content"
        start_end='about_us'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Help"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />

    <Button
        id="login_btn"
        width="wrap_content"
        height="36px"
        end_end="section_top"
        cy_align="login_input"
        marginEnd="80"
        background="btn_dark_green"
        fontFamily="Avenir"
        padding="8px"
        value="LOGIN NOW"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="8px"

    />
    
      
    <TextField
        id="login_input"
        width="220px"
        height="36px"
        end_start="login_btn"
        cy_align="section_top"
        marginTop="16"
        marginEnd="18"
        placeholder="Login"
        background="btn_dark_green"
        fontFamily="Avenir"
        padding="8px"
        text="apply"
        value="LOGIN"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
        inputType='password'
    />
    
    
    <TextArea
        id="notes_area"
        width="32%"
        height="25%"
        start_start="parent"
        end_end="parent"
        top_bottom="section_top"
        marginTop="80"
        marginEnd="8"
        placeholder="Login"
        background="white"
        fontFamily="Avenir"
        padding="8px"
        text=""
        value="lol!!!!"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        border="2px solid blue"
        borderRadius="12px"
        resize="none"
    />
    
    <Button
        id="check_btn"
        width="120px"
        height="36px"
        start_end="notes_area"
        cy_align="notes_area"
        marginStart="8"
        background="lightgray"
        fontFamily="Avenir"
        padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"
    />
       
    <DropDown
        id="drop_down"
        width="220px"
        height="32px"
        end_start="notes_area"
        cy_align="notes_area"
        marginEnd="8"
        items="['Nigeria','The United States','The United Kingdom','France','South Africa','Republic of Ireland','South Korea','Japan','Brazil','Chile','Argentina','Ecuador']"
        background="#ddd"
        fontFamily="Avenir"
        padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"       
    />

    <Clock
        id="clock_1"
        width="90"
        height="90"
        start_end="site_title"
        top_top="site_title"
        bottom_bottom="site_title"
        marginTop="0"
        clockOuterColor="transparent"
        clockMiddleColor="black"
        clockInnerColor="white"
        clockTickColor="black"
        clockSecondsColor="brown"
        clockMinutesColor="black"
        clockHoursColor="black"
        clockCenterSpotWidth="22"
        clockOuterCircleAsFractionOfFrameSize="1"
        clockShowBaseText="true"
        
    />

    <ProgressBar
        id="progress"
        width="300"
        height="40"
        cy_align="check_btn"
        start_end="check_btn"
        marginStart="32px"
        marginTop="32px"
        progressColor="darkgreen"
        backgroundColor="gray"
        textColor="white"
        value="32"

    />

    <include
        layout="includer"
        id="included_details"
        width="100%"
        height="220"
        marginTop="88"
        cx_align="parent"
        top_bottom="notes_area"
        border="1px solid black"
        borderRadius="1em"
    />

    <Radio
        id='yes'
        width="20"
        height="20"
        name='question'
        checked='false'
        cx_align="notes_area"
        top_bottom="included_details"
        marginTop='16'
        
    />
    <Radio
        id='no'
        width="20"
        height="20"
        name='question'
        checked='true'
        top_top="yes"
        start_end="yes"
        marginStart='16'
        cssClass="funny_radio"
        
        
    />
    
    
    <Table
        id="table_one"
        width="wrap_content"
        height="wrap_content"
        end_start="drop_down"
        cy_align="notes_area"
        hasHeader="true"
        hasFooter="true"
        tableItems="[row[23,44,90],row[1001,873,202],row[34,98,188]]"
    
    
    />

        
</ConstraintLayout>