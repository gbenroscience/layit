<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayout
    width="match_parent"
    height="match_parent">

    <imports
        files="test/test.js;test/aaa.js;" controller="TestController"
    />
    <View
        id="section_top"
        width="match_parent"
        height="128px"
        backgroundColor="#000044"
        top_top='parent'
        start_start='parent'
        end_end='parent'

    />
    <MultiLineLabel
        id="site_title"
        width="wrap_content"
        height="80px"
        maxWidth="250px"
        padding="0"
        start_start='section_top'
        cy_align="section_top"
        marginStart="24"
        textColor="#eee"
        value="Layit Framework By Example by {{ name }}"
        textSize="1.5em"
        textStyle="bold italic"
        fontFamily="Kartika"
    
    />
  
     
    <Guideline
        id="guide_menu"
        width="1"
        height="1"
        orientation="vertical"
        guide_percent="0.5"
    />
    <Label
        id="home"
        width="wrap_content"
        height="wrap_content"
        end_start='people'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Home"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="people"
        width="wrap_content"
        height="wrap_content"
        end_start='lifestyle'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="People and Positions"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />    
    <Label
        id="lifestyle"
        width="wrap_content"
        height="wrap_content"
        cx_align='guide_menu'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Lifestyle"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <Label
        id="about_us"
        width="wrap_content"
        height="wrap_content"
        start_end='lifestyle'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="About Us"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
       
    />

    <Label
        id="help"
        width="wrap_content"
        height="wrap_content"
        start_end='about_us'
        bottom_bottom="section_top"
        marginStart="6"
        marginBottom="16"
        textColor="white"
        value="Help"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />

    <Button
        id="login_btn"
        width="wrap_content"
        height="36px"
        end_end="section_top"
        cy_align="login_input"
        marginEnd="80"
        background="btn_dark_green"
        fontFamily="Avenir"
        padding="8px"
        value="LOGIN NOW"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="8px"

    />
    
      
    <TextField
        id="login_input"
        width="220px"
        height="36px"
        end_start="login_btn"
        cy_align="section_top"
        marginTop="16"
        marginEnd="18"
        placeholder="Login"
        background="btn_dark_green"
        fontFamily="Avenir"
        padding="8px"
        text="apply"
        value="LOGIN"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
        inputType='password'
    />
    
    <Label
        id="text_area_label"
        width="wrap_content"
        height="wrap_content"
        start_start='notes_area'
        bottom_top="notes_area"
        marginStart="0"
        marginBottom="16"
        textColor="red"
        paddingStart="0"
        value="Here is a textarea below!"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    <TextArea
        id="notes_area"
        width="512px"
        height="0"
        dim_ratio='2:1'
        cx_align="parent"
        top_bottom="section_top"
        marginTop="80"
        marginEnd="8"
        placeholder="Login"
        background="white"
        fontFamily="Avenir"
        padding="8px"
        text=""
        value="lol!!!!"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        border="2px solid blue"
        borderRadius="12px"
        resize="none"
    />
    
    <Button
        id="check_btn"
        width="120px"
        height="36px"
        start_end="notes_area"
        cy_align="notes_area"
        marginStart="8"
        background="lightgray"
        fontFamily="Avenir"
        padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"
    />
       
    <DropDown
        id="drop_down"
        width="220px"
        height="32px"
        end_start="notes_area"
        cy_align="notes_area"
        marginEnd="8"
        items='["Nigeria","The United States","The United Kingdom","France","South Africa","Republic of Ireland","South Korea","Japan","Brazil","Chile","Argentina","Ecuador"]'
        background="#ddd"
        fontFamily="Avenir"
        padding="0px"
        value="CHECK"
        textColor="black"
        textSize="1.5em"
        textStyle="bold"       
    />

    <Clock
        id="clock_1"
        width="90"
        height="90"
        start_end="site_title"
        top_top="site_title"
        bottom_bottom="site_title"
        marginTop="0"
        clockOuterColor="transparent"
        clockMiddleColor="black"
        clockInnerColor="white"
        clockTickColor="black"
        clockSecondsColor="brown"
        clockMinutesColor="black"
        clockHoursColor="black"
        clockCenterSpotWidth="22"
        clockOuterCircleAsFractionOfFrameSize="1"
        clockShowBaseText="true"
        
    />

    <ProgressBar
        id="progress"
        width="300"
        height="40"
        cy_align="check_btn"
        start_end="check_btn"
        marginStart="32px"
        marginTop="32px"
        progressColor="darkgreen"
        backgroundColor="gray"
        textColor="white"
        value="32"

    />

    <Label
        id="includes_label"
        width="wrap_content"
        height="wrap_content"
        cx_align='included_details'
        bottom_top="included_details"
        marginStart="0"
        marginBottom="16"
        textColor="darkred"
        paddingStart="0"
        value="An included layout with other levels of includes below!"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    
    <include
        layout="includer"
        id="included_details"
        width="100%"
        height="220"
        marginTop="408"
        cx_align="parent"
        top_bottom="notes_area"
        border="1px solid lightgray"
        borderRadius="1em"
    />

        
    <Radio
        id='yes'
        width="20"
        height="20"
        name='question'
        checked='false'
        cx_align="notes_area"
        top_bottom="included_details"
        marginTop='16'
        
    />
    <Radio
        id='no'
        width="20"
        height="20"
        name='question'
        checked='true'
        top_top="yes"
        start_end="yes"
        marginStart='16'
        cssClass="funny_radio"
        
        
    />
    
    <Label
        id="table_one_label"
        width="wrap_content"
        height="wrap_content"
        start_start='table_one'
        bottom_top="table_one"
        marginStart="0"
        marginBottom="16"
        textColor="red"
        paddingStart="0"
        value="Here is a native html table below"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    
    <NativeList
        id='ul_list'
        width='table_one'
        height='wrap_content'
        end_start='table_one'
        top_top='table_one'
        bottom_bottom='table_one'
        marginEnd='16'
        listType='ol'
        showBullets='true'
        items='["Antelope","Buffalo","Chimpanzee","Dog","Elephant","Frog","Gorilla","Hen","Impala","Jaguar"]'
        border='1px solid midnightblue'
        backgroundColor='pink'
        
        />
    <NativeTable
        id="table_one"
        width="120"
        height="90"
        end_start="drop_down"
        cy_align="notes_area"
        marginHorizontal='20px'
        hasHeader="true"
        fontWeight='bold'
        hasFooter="false"
        textColor="midnightblue"
        tableItems="[[23,44,90],[1001,873,202],[34,98,188]]"
    
    
    />
    
    <Label
        id="custom_table_label"
        width="wrap_content"
        height="wrap_content"
        start_start='table_two'
        top_bottom="notes_area"
        marginStart="0"
        marginTop="8"
        textColor="darkred"
        paddingStart="0"
        value="A custom table below!"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    
    
    <SearchableTableView
        id="table_two"
        width="90%"
        height="190"
        withNumbering='true'
        cx_align="parent"
        top_bottom="custom_table_label"
        marginTop="8"
        hasHeader="true"
        hasFooter="false"
        showBorders="true"
        buttonText="ADD MORE"
        showLeftBtn="true"
        headerPadding="1.3em"
        fontSize="1.0em"
        theme="#444444"
        title="Layit!!"
        src="splash.png"
        pagingEnabled="true"
        actionColumns='["VIEW","DELETE"]'
        checkableColumns='["RED" , "BLUE"]'
        textColumns='["Value 1","Value 2","Value 3"]'
        selectColumns='[{"Countries": ["Nigeria","Portugal","Chile","Colombia","South Africa"]},{"Capitals": ["Abuja","Lisbon","Santiago","Bogota","Pretoria"]},{"Continents": ["Africa","Europe","South America","South America","Africa"]}]'
        tableItems='[[1,2,3],[1001,873,202],[34,98,188],[394,598,1086],["COOL","NUMBERS","HERE"]]'
    
    
    />

    <VideoView
        id="video_1"
        width="250px"
        height="160px"
        cx_align="progress"
        marginTop='12px'
        top_bottom="progress"
        sources='[{"src": "/videos/stuff.mp4","type": "video/mp4", "codecs": "avc1.42E01E, mp4a.40.2, theora, vorbis"}]'
        autoplay='true'
        muted='true'
        controls='true'
        preload='true'                                                                                                                                                                 
                    
    />
</ConstraintLayout>